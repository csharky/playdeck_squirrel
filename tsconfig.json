{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "strictPropertyInitialization": false,
        "isolatedModules": false,
        "moduleResolution": "node",
        "types": ["svelte"],
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ]
}
